model admin {
  id    Int    @id @default(autoincrement())
  login String @unique

  firstName String
  lastName  String

  orderStatus orderStatus[]
  uids        Int[]
  role        Role          @relation(fields: [roleId], references: [id])
  roleId      Int
}

model counterAgent {
  id   Int    @id @default(autoincrement())
  name String

  country String
  INN     String
  KPP     String
  OGRN    String

  password    String
  adminId     Int
  orderStatus orderStatus[]
  role        Role          @relation(fields: [roleId], references: [id])
  roleId      Int
}

model catalog {
  id   Int    @id @default(autoincrement())
  name String

  adminId  Int
  products product[]
}

model product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  priceOne    String
  priceMany   String
  count       Int
  catalog     catalog? @relation(fields: [catalogId], references: [id])
  catalogId   Int?
}

model orderStatus {
  id                Int          @id @default(autoincrement())
  subtotal          Int
  date              String
  nameCard          String
  numberCard        String
  dateCard          String
  cvvCard           String
  productIdAndCount Int[]
  provider          admin        @relation(fields: [adminId], references: [id])
  counterAgent      counterAgent @relation(fields: [counterAgentId], references: [id])
  adminId           Int
  counterAgentId    Int
  status            String
}

model statistic {
  id             Int    @id @default(autoincrement())
  expenses       String
  incomes        String
  adminId        Int
  products       Int[]
  counterAgentId Int
  date           String
}

model Role {
  id           Int            @id @default(autoincrement())
  name_role    String
  admin        admin[]
  counterAgent counterAgent[]
}
